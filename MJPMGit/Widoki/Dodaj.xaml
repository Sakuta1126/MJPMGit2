<Window x:Class="MJPMGit.Widoki.Dodaj"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MJPMGit.Widoki"
        mc:Ignorable="d"
        Title="Dodaj" Height="300" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Podaj nazwe:"></Label>
        <TextBox Width="200" x:Name="nazwa"></TextBox>
        <Label Content="Podaj opis:"></Label>
        <TextBox Width="200" x:Name="opis"></TextBox>
        <Label></Label>
        <Button x:Name="WczytajBTN" Click="WczytajBTN_Click" Width="100" Height="100" Content="Wczytaj plik" BorderBrush="Black" Background="White" Foreground="Black" FontWeight="Bold"></Button>
        <Label x:Name="wczytajTxt" HorizontalAlignment="Center" Content="Wczytano plik: NIE"></Label>
        <Button x:Name="DodajBTN" Click="DodajBTN_Click" Content="Dodaj" Width="100" Height="40"  Background="Green" BorderBrush="Green" Foreground="White" FontWeight="Bold"></Button>
    </StackPanel>
</Window>
